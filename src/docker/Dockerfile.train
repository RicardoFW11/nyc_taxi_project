FROM python:3.9-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY src/ src/
COPY data/ data/
RUN mkdir -p models

ENV PYTHONPATH=/app

# El comando por defecto entrena el modelo XGBoost
CMD ["python", "src/pipelines/train_model.py", "--model", "xgboost"]